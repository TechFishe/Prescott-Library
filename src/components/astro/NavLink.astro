---
    interface Props{
        icon: string,
        viewBox: string,
        text: string,
        URL: string,
        isBlank?: boolean
    }

    const {icon, viewBox, text, URL, isBlank = false}:Props = Astro.props;
---
{!isBlank ? 
    <a href={URL} class="border border-[#E9EDDE]/25 group px-2 py-1 rounded-lg shadow hover:shadow-md space-x-1 hover:shadow-[#E9EDDE]/30 shadow-[#E9EDDE]/25 hover:scale-[1.025] transition-all ease-in flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" height="1.25rem" fill="currentColor" viewBox={viewBox} class="group-hover:text-burgundy-900 transition-colors ease-in">
            <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path d={icon}/>
        </svg>
        <span class="text-2xl font-semibold">{text}</span>
    </a>
:
    <a href={URL} target="_blank" rel="noopener noreferrer" class="border border-[#E9EDDE]/25 group px-2 py-1 rounded-lg shadow hover:shadow-md space-x-1 hover:shadow-[#E9EDDE]/30 shadow-[#E9EDDE]/25 hover:scale-[1.025] transition-all ease-in flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" height="1.25rem" fill="currentColor" viewBox={viewBox} class="group-hover:text-burgundy-900 transition-colors ease-in">
            <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path d={icon}/>
        </svg>
        <span class="text-2xl font-semibold">{text}</span>
    </a>
}
